<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#33ccff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_in_progress"
            android:text="Study in progress. You can exit the app at any time, it will continue to run in the background."
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_to_complete_heading"
            android:text="To complete the study:"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_to_complete_instructions"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_to_withdraw_heading"
            android:text="To withdraw from the study:"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_to_withdraw_instructions"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_complete_scales_tv"
            android:text="Please complete last set of questionnaires to finish the trial:"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_do_exit_scales_button"
            android:textColor="@color/colorPrimaryDark"
            android:text="START QUESTIONNAIRES" />

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_thank_you"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_completion_code"
            android:text="Completion Code: "
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_completion_URL_heading"
            android:text="Completion URL:"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_screen_completion_URL_link"
            android:autoLink="web"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"/>

    </LinearLayout>


</RelativeLayout>
